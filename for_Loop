for(initialization, condition, increment/decrement) {    
//block of statements    
}    


public class Calculation{
    public static void main(String args[]){
        int sum = 0;
        for(int i=0; i<10; i++){
            sum  = sum  + i;
        }
        System.out.println("The sum of first 10 natural numbers is " + sum);
    }
}
